{
  "$schema": "https://json.schemastore.org/semantic-release.json",
  "tagFormat": "${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "update", "release": "patch" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "ğŸš€ Features", "hidden": false },
            { "type": "feature", "section": "ğŸš€ Features", "hidden": false },
            { "type": "fix", "section": "ğŸ› Bug Fixes", "hidden": false },
            { "type": "perf", "section": "âš¡ Performance", "hidden": false },
            { "type": "revert", "section": "âª Reverts", "hidden": false },
            { "type": "docs", "section": "ğŸ“ Documentation", "hidden": false },
            { "type": "update", "section": "â¬†ï¸ Dependency Updates", "hidden": false },
            { "type": "style", "section": "ğŸ¨ Code Style", "hidden": true },
            { "type": "chore", "section": "ğŸ”§ Chores", "hidden": true },
            { "type": "refactor", "section": "â™»ï¸ Refactoring", "hidden": true },
            { "type": "test", "section": "ğŸ§ª Tests", "hidden": true },
            { "type": "build", "section": "ğŸ“¦ Build System", "hidden": true },
            { "type": "ci", "section": "ğŸ” CI/CD", "hidden": true }
          ]
        }
      }
    ],
    "@semantic-release/changelog",
    "@semantic-release/npm",
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json"
        ]
      }
    ],
    [
      "@semantic-release/github",
      {
        "releaseNameTemplate": "Release <%= nextRelease.version %>"
      }
    ]
  ]
}
